<h1>Unanswered Questions</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr class='rowlist'>
        <td><%= page.question %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class='footer'>
  <%= link_to 'New Page', new_page_path %>
  <% if current_user %>
    <%= link_to "Sign Out", destroy_user_session_url, method: 'delete' %>
  <% else %>
    <%= link_to "Sign In", new_user_session_url %>
  <% end %>
</div>
